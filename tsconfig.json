{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2018",
    "outDir": "out",
    "moduleResolution": "node",
    "lib": [
      "es6",
      "dom"
    ],
    "types": [
      "node",
      "vscode"
    ],
    "strict": false,
    "sourceMap": true,
    "rootDir": ".",
    "isolatedModules": true,
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*.ts",
    "./node_modules/vscode/vscode.d.ts",
    "./node_modules/vscode/lib/*", "spec/WorkSpace.test.ts",
  ],
  "exclude": [
    "node_modules",
    ".vscode-test"
  ]
}